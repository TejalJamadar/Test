<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="My Account"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:paddingLeft="35dp"
            android:gravity="center_vertical"
            android:background="#000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="FIRST NAME"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed1"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/txt2"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="LAST NAME"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@id/ed1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed2"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="20dp"
                android:layout_below="@id/txt3"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="PHONE NUMBER"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                />
            <EditText
                android:id="@+id/ed3"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/txt4"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="EMAIL ADDRESS"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@id/ed3"
                />
            <EditText
                android:id="@+id/ed4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/txt5"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/txt6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="ADDRESS"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed5"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/txt6"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="STATE"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@id/ed5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed6"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_below="@id/txt7"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt8"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="DISTRICT"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@id/ed6"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_below="@id/txt8"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/txt9"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="PINCODE"
                android:textColor="#000000"
                android:textSize="15dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:layout_below="@id/ed7"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:id="@+id/ed8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20dp"
                android:layout_below="@id/txt9"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@drawable/border1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/txt10"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:text="UPDATE PASSWORD"
                android:textColor="#000000"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/ed9"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="20dp"
                android:layout_below="@id/txt10"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:id="@+id/save"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:background="#000000"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false"
                android:onClick="onClick"
                android:textSize="20dp"
                android:background="#000000"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/save"
                android:layout_marginLeft="25dp"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
